general {
	interval = 5
}

order += "path_exists VPN"
order += "ethernet _first_"
order += "wireless _first_"
order += "memory"
order += "disk /"
order += "volume master"
order += "battery 0"
order += "tztime Tehran"

tztime Tehran {
        format = "%Y-%m-%d %H:%M:%S"
	timezone = "Asia/Tehran"
}

memory {
	format = "Mem: %free"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

